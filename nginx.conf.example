# Configuração do Nginx para fpsoftware.cloud/agenda
# Copie este arquivo para /etc/nginx/sites-available/fpsoftware.cloud
# e ative com: sudo ln -s /etc/nginx/sites-available/fpsoftware.cloud /etc/nginx/sites-enabled/
#
# LEGADO: O proxy reverso em produção usa Traefik. Este arquivo é mantido como referência.

server {
    listen 80;
    server_name fpsoftware.cloud;

    # Proxy para a aplicação na rota /agenda
    # IMPORTANTE: Usa o nome do container (mesma rede Docker)
    location /agenda {
        proxy_pass http://consultant-scheduler:3001/agenda;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
        
        # Timeout para requisições longas
        proxy_read_timeout 300s;
        proxy_connect_timeout 75s;
    }

    # Redirecionar /agenda/ para /agenda (sem barra final)
    location = /agenda/ {
        return 301 /agenda;
    }
}

